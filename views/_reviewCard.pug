mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${review.author.photo}`, alt=`${review.author.name}`)
            h6.reviews__user= review.author.name
        p.reviews__text= review.description
        .reviews__rating
            
            each star in [1,2,3,4,5]
                svg.reviews__star(class= `reviews__star--${review.rate >= star ? 'active': 'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')